<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/panel_IMG_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/three_lanes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="visible">


        <LinearLayout
            android:id="@+id/panel_LAYOUT_hearts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/panel_IMG_heart1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/panel_IMG_heart2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/panel_IMG_heart1"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/panel_IMG_heart1"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/panel_IMG_heart3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/panel_IMG_heart1"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/panel_IMG_heart2"
                android:src="@drawable/heart" />


            <TextView
                android:id="@+id/panel_LBL_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0000"
                android:layout_alignTop="@id/panel_IMG_heart1"
                android:textColor="@color/white"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/panel_IMG_monster00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster3"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/panel_IMG_monster10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster3"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/panel_IMG_monster20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster3"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/panel_IMG_monster30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/panel_IMG_monster32"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monster3"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/panel_IMG_left_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/left_arrow" />


            <ImageView
                android:id="@+id/panel_IMG_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/right_arrow" />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/panel_IMG_pacman_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pacman"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel_IMG_pacman_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pacman"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/panel_IMG_pacman_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pacman"
            android:visibility="invisible" />

    </LinearLayout>



</RelativeLayout>